<Window x:Class="JirafeForPolina.View.Windows.Registration1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JirafeForPolina.View.Windows"
        mc:Ignorable="d"
        Title="Registration1Window" SizeToContent="WidthAndHeight" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        MinHeight="200" MinWidth="700">
    <Grid Margin="20">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="200" />
                <RowDefinition Height="10" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Image  Grid.Row="1"  Source="/Resource/милижираф.jpg" />

            <TextBlock Text="Удивительный" Grid.Row="3" HorizontalAlignment="Center" FontSize="45"/>
            <TextBlock Text="Жираф" Grid.Row="4" HorizontalAlignment="Center"
                       FontSize="50" VerticalAlignment="Top"/>
        </Grid>

        <!-- #region левая часть-->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="15" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="15" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="15" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="15" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock Text="Регистрация" Grid.Row="1" HorizontalAlignment="Center" FontSize="40" />
        <TextBlock Text="ФИО " Grid.Row="3" HorizontalAlignment="Left"  FontSize="20"/>
        <TextBox Name="SurnameTb" Grid.Row="4"/>
            
        <TextBlock Text="Дата рождения " Grid.Row="6" HorizontalAlignment="Left"  FontSize="20"/>
        <DatePicker Name="DayeOfBirthDp" Grid.Row="7"/>
            
        <TextBlock Text="Номер телефона " Grid.Row="9" HorizontalAlignment="Left"  FontSize="20"/>
        <TextBox Name="NumberPhoneTb" Grid.Row="10"/>
            
        <TextBlock Text="Почта " Grid.Row="12" HorizontalAlignment="Left"  FontSize="20"/>
            <TextBox Name="EmailTb" Grid.Row="13"/>
        <TextBlock  Grid.Row="14" HorizontalAlignment="Right">
              <Hyperlink Name="EntryHL" Click="EntryHL_Click">
                 Уже есть аккаунт? Войти
            </Hyperlink>
        </TextBlock>

        <Button Name="EntryBtn" Click="EntryBtn_Click_1"  Content="Зарегистрироваться" 
                Grid.Row="26" Height="50" Width="250" HorizontalAlignment="Right"/>
        </Grid>
        <!--#endregion-->

    </Grid>
</Window>
