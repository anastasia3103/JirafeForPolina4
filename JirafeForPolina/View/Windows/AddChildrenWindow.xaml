<Window x:Class="JirafeForPolina.View.Windows.AddChildrenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JirafeForPolina.View.Windows"
        mc:Ignorable="d"
        Title="AddChildrenWindow" Height="500" Width="700">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="50" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="3" Text="Добавление ребёнка" HorizontalAlignment="Center" FontSize="35"/>
        <TextBlock>
            <Hyperlink Name="ExitHL" Click="ExitHL_Click">
                Выйти
            </Hyperlink>
        </TextBlock>

        <TextBlock Grid.Row="2" Text="ФИО ребенка" HorizontalAlignment="Center" />
        <TextBlock Grid.Row="4" Text="Дата рождения" HorizontalAlignment="Center" />
        <TextBlock Grid.Row="6" Text="Введите цену" HorizontalAlignment="Center" />
        <TextBlock Grid.Row="8" Text="Описание товара" HorizontalAlignment="Center" />
        <TextBlock Grid.Row="10" Text="Ссылка на фото" HorizontalAlignment="Center" />

        <TextBox Name="FullnameTb" Grid.Row="2" Grid.Column="2"/>
        <DatePicker Name="DateOfBirthDp" Grid.Row="4" Grid.Column="2"/>
        <TextBox Name="PriceTb" Grid.Row="6" Grid.Column="2"/>
        <TextBox Name="DescriptionTb" Grid.Row="8" Grid.Column="2"/>
        <TextBox Name="PhotoLinkTb" Grid.Row="10" Grid.Column="2"/>

        <Button Grid.Column="2" Grid.Row="12" Content="Добавить" Name="AddBtn" Click="AddBtn_Click"/>

    </Grid>
</Window>
