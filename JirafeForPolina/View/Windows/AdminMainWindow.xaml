<Window x:Class="JirafeForPolina.View.Windows.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JirafeForPolina.View.Windows"
        mc:Ignorable="d"
                Title="Главное окно администратора" MinHeight="820" MinWidth="1280"
WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid Background="#f2ddc6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="AUTO" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBlock>
        <Hyperlink>
            лого
        </Hyperlink>
            </TextBlock>

            <TextBlock Text="Удивительный жираф" FontSize="30"
                       Grid.Column="2" FontWeight="Bold" />

            <StackPanel Margin="10" Grid.Column="5"
                    Orientation="Horizontal">

                <TextBlock Grid.Column="4" VerticalAlignment="Center" FontFamily="Myanmar Text" FontWeight="Bold" FontSize="20">
                    <Hyperlink Name="ActivityBtnHl" Foreground="#FF7DC269" Click="ActivityBtnHl_Click">
                        Занятия
                    </Hyperlink>
                </TextBlock>
                <Separator Height="0" Width="30"/>
                <TextBlock Grid.Column="8" VerticalAlignment="Center" FontFamily="Myanmar Text" 
                           FontWeight="Bold" FontSize="20">
                <Hyperlink Name="TicketsHl" Foreground="#FF7DC269" Click="TicketsHl_Click">
    Билеты
</Hyperlink>
                </TextBlock>

                <Separator Height="0" Width="30"/>
                <TextBlock Grid.Column="6" VerticalAlignment="Center" FontFamily="Myanmar Text"
                       FontWeight="Bold" FontSize="20" >
                      <Hyperlink Foreground="#FF7DC269" Name="UserListHl" Click="UserListHl_Click">
                          Список пользователей
                      </Hyperlink>
                </TextBlock>


            </StackPanel>
        </Grid>
        <Frame Grid.Row="2" Name="MainAdminFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
