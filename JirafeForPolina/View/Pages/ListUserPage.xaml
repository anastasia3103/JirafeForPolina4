<Page x:Class="JirafeForPolina.View.Pages.ListUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JirafeForPolina.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ListUserPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="100" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Зарегистрированные пользователи" FontSize="40" FontWeight="Bold" 
                   HorizontalAlignment="Center"/>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions   >
                <RowDefinition Height="1*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="130" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Поиск по имени" FontSize="30"/>

            <TextBox Grid.Row="1" Name="ActivityTb"/>
            <Button Content="Найти"  Name="SearchBtn" Grid.Column="2" Grid.Row="1" Click="SearchBtn_Click" />

        </Grid>
        <Grid Grid.Row="4">
            <ListView Name="UsersLv">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding Firstname}"/>
                        <GridViewColumn Header="Имя"  DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Отчество"  DisplayMemberBinding="{Binding Middlename}"/>
                        <GridViewColumn Header="Дата рождения" DisplayMemberBinding="{Binding DateOfBirth, StringFormat={}{0:dd/MM/yyy}}"/>
                        <GridViewColumn Header="Номер телефона"  DisplayMemberBinding="{Binding NumberPhone}"/>
                        <GridViewColumn Header="Фамилия ребенка"  DisplayMemberBinding="{Binding Children.Firstname}"/>
                        <GridViewColumn Header="Имя ребенка"  DisplayMemberBinding="{Binding Children.Name}"/>

                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Page>
