<Page x:Class="JirafeForPolina.View.Pages.MainPage2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JirafeForPolina.View.Pages"
      mc:Ignorable="d" 
          d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="60" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock Text="ПАРК РАЗВЛЕЧЕНИЙ" Grid.Row="1" FontSize="50"/>
            <TextBlock Text="Удивительный" Grid.Row="3"  FontSize="55"/>
            <TextBlock Text="Ж И Р А Ф" Grid.Row="4"
           FontSize="55" VerticalAlignment="Top"/>
        </Grid>

        <Grid Grid.Column="2" Margin="30" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="50" />
                <RowDefinition Height="40" />
                <RowDefinition Height="60" />
                <RowDefinition Height="1" />
            </Grid.RowDefinitions>

            <TextBlock Text="Сделай свой день лучше с нами!" Grid.Row="1"
                   TextWrapping="Wrap"  FontSize="40"/>
            <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center">
                <Button Name="TicketsBtn" Content="Билеты" Width="200" Click="TicketsBtn_Click"/>
                <Separator Height="0" Width="100"/>
                <Button Name="EvantsBtn" Content="Мастер-классы"
                    Width="200" Click="EvantsBtn_Click"
                   />
            </StackPanel>


        </Grid>


    </Grid>
</Page>
