<Page x:Class="JirafeForPolina.View.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JirafeForPolina.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ProfilePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Профиль" FontSize="30" FontWeight="Black"
                   HorizontalAlignment="Center"/>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            
            <!--#region О себе-->
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="О себе" Grid.ColumnSpan="3" FontSize="30" HorizontalAlignment="Center"/>
                
                <TextBlock Text="ФИО" Grid.Row="1"  FontSize="25" HorizontalAlignment="Left"/>
                <TextBlock Text="Дата рождения" Grid.Row="2"  FontSize="25" HorizontalAlignment="Left"/>
                <TextBlock Text="Номер телефона" Grid.Row="3"  FontSize="25" HorizontalAlignment="Left"/>
                <TextBlock Text="Электронная почта" Grid.Row="4"  FontSize="25" HorizontalAlignment="Left"/>
               

                <TextBox Name="NameTb" Grid.Column="2"  Grid.Row="1" 
                         Height="40" Text="{Binding dcdc}"/>
                <TextBox Name="PhoneTb" Grid.Column="2"  Grid.Row="3" 
                         Height="40"  Text="{Binding dcdc}"/>
                <TextBox Name="EmailTb" Grid.Column="2"  Grid.Row="4" 
                         Height="40"  Text="{Binding dcdc}"/>

                <DatePicker Name="DateOfBirthDP" Text="{Binding dcdc}"
                            Grid.Column="2" Height="40" VerticalAlignment="Center" 
                            Grid.Row="2"  />

                <Button Content="Изменить" Name="EditTb" Click="EditTb_Click"
                        Grid.Column="2"  Grid.Row="5" 
                         Height="40" Width="250" /> 

            </Grid>
            <!--#endregion-->
            
            <!--#region О дете-->
            <Grid Grid.Column="2">
                
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" /> 
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Мои дети" Grid.ColumnSpan="3" FontSize="30"
                               HorizontalAlignment="Center"/>

            </Grid>
            
            <!--#endregion-->
            
        </Grid>
        
    </Grid>
</Page>
